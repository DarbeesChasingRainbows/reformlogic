# ============================================
# ReformLogic — Environment Variables
# ============================================
# Copy to .env and customize for your environment
# ============================================

# ---- Email (Resend HTTP API) ----
# Get your API key at https://resend.com/api-keys
# Omit RESEND_API_KEY to enable dev mode (emails logged to console)
RESEND_API_KEY=
# Where form submissions & signed contract copies are sent
NOTIFICATION_EMAIL=hello@reformlogic.com
# Verified sender address — must match a domain verified in Resend
# See: https://resend.com/domains
FROM_ADDRESS=ReformLogic <noreply@reformlogic.com>

# ---- PostgreSQL (if applicable) ----
POSTGRES_PASSWORD=reform_dev_pw

# ---- App ----
APP_PORT=8000
DB_PORT=5432
GIT_REVISION=dev
